{
  "version": "2",
  "checks": {
    "argument-count": {
      "enabled": false,
      "config": {
        "threshold": 4
      }
    },
    "complex-logic": {
      "enabled": true,
      "config": {
        "threshold": 20
      }
    },
    "file-lines": {
      "enabled": false,
      "config": {
        "threshold": 300
      }
    },
    "method-complexity": {
      "enabled": true,
      "config": {
        "threshold": 20
      }
    },
    "method-count": {
      "enabled": true,
      "config": {
        "threshold": 25
      }
    },
    "method-lines": {
      "enabled": false,
      "config": {
        "threshold": 70
      }
    },
    "nested-control-flow": {
      "enabled": true,
      "config": {
        "threshold": 4
      }
    },
    "return-statements": {
      "enabled": true,
      "config": {
        "threshold": 4
      }
    },
    "similar-code": {
      "enabled": false,
      "config": {
        "threshold": null
      }
    },
    "identical-code": {
      "enabled": false,
      "config": {
        "threshold": null
      }
    }
  },
  "exclude_patterns": [
    "**/admin/",
    "**/specs/",
    ".gitignore",
    "README.md",
    "**/__test__/",
    "**/docs/"
  ]
}